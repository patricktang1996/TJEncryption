         </items>
      </SplitPane>
      <SplitPane dividerPositions="0.24919093851132687" prefHeight="200.0" prefWidth="200.0">
         <items>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text=" Password " />
            <TextField fx:id="password"/>
         </items>
      </SplitPane>
   
       <Label fx:id="alertText" />
       <Button onAction="#onLoginButtonClick" text="Login" />
